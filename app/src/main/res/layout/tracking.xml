<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView
            android:id="@+id/tracking_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/x_coor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/xcoor" />
    <TextView
            android:id="@+id/y_coor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ycoor" />
    <TextView
            android:id="@+id/z_coor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/zcoor" />
    <TextView
            android:id="@+id/face_detected"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/facedetected" />
    <TextView
            android:id="@+id/head_tracking"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/headtracking" />
</LinearLayout>
